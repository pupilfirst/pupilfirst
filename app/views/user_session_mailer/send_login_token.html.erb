<%
  login_url = user_token_url(@url_options)
%>

<% content_for :salutation do %>
  <%= t("shared.salutation_name", name: @user.name) %>
<% end %>

<% content_for :body do %>
  <%= t("mailers.user_session.send_login_token.body.main_html", link_to: link_to(t("mailers.user_session.send_login_token.body.link_to"), login_url), school_name: @school_name) %>

  <%= render 'mailers/link_fallback', url: login_url%>

  <p><%= t('shared.login_token_expiration_warning_html', timestamp: @user.login_token_expiration_time, login_url: sign_in_with_email_url) %></p>
<% end %>
