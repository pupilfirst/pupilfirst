<% content_for(:head) do %>
  <title><%= t('.title') %></title>
<% end %>
<div class="bg-gray-50 py-8">
  <div class="container mx-auto px-3 max-w-6xl">
    <div class="max-w-3xl mx-auto">
      <div class="convert-markdown" data-json-props="<%= { markdown: @markdown, profile: "permissive" }.to_json %>">
        <div style="font-family: monospace; white-space: pre-wrap;"><%= sanitize(@markdown) %></div>
      </div>
    </div>
  </div>
</div>
