<% user = student.user %>
<div data-test-class="student" class="p-5 mt-4 border border-gray-200 bg-white rounded-lg">
  <div class="flex justify-between items-center gap-4">
    <div>
      <p class="font-semibold">
        <%= user.name %>
      </p>
      <p class="text-sm text-gray-600">
        <%= user.title %> <span class="px-1" aria-hidden="true">|</span>
        <% if user.last_seen_at.present? %>
          <span title="<%= user.last_seen_at.iso8601 %>"><%= t('.time_ago', time_ago: time_ago_in_words(user.last_seen_at)) %></span>
        <% else %>
          <%= t('.never_signed_in') %>
        <% end %>
      </p>
    </div>
    <div class="flex flex-col items-center py-2 px-2 text-xs bg-yellow-50 text-yellow-900 border border-yellow-900 rounded-lg">
      <p><%= t('.level_label') %></p>
      <p class="font-bold"><%= student.level.number %></p>
    </div>
  </div>
</div>
