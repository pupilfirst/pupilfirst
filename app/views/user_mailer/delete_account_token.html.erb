<% content_for :salutation do %>
  Hello <%= @user.name %>,
<% end %>

<% content_for :body do %>
  <p>We received a request to delete your account in
    <%= @school.name %>.</p>
  <p> Please click this <%= link_to 'link', @delete_account_url%> to confirm account deletion. The link is valid for 30 minutes only.</p>

  <p>
    If you&rsquo;re unable to click the link above, please copy and paste the following link into your browser&rsquo;s
    address bar:
  </p>

  <p>
    <%= render 'mailers/link_fallback', url: @delete_account_url %>

  <p> This action is irreversible, and will permanently remove your access to the school.</p>
<% end %>
