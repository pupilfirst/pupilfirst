- content_for :head
  meta name="description" content="SV.CO, or Startup Village is India’s No. 1 Digital Incubator for Student developers. SV.CO Product school helps individuals or a team of student developers build an internet software product with industry guidance."
  meta property="og:title" content="SV.CO"
  meta property="og:type" content="website"
  meta property="og:url" content=root_url
  meta property="og:image" content=image_url('home/index/program-build-startup.jpg')
  meta property="og:description" content="SV.CO, or Startup Village is India's No. 1 Digital Incubator for Students. SV.CO helps a team of students develop an idea, build a prototype and collect feedback from early customers."
  meta property="fb:app_id" content=Rails.application.secrets.facebook.dig(:app_id)

- if startup_village_redirect?
  - content_for :sitewide_notice
    ' <strong>SV.CO</strong> is the next phase of the Startup Village story.
    ' #{link_to 'Read more here', 'https://www.sv.co/cwlg8', class: 'btn btn-sm', target: '_blank'}

#home__index

section.home-hero__container
  .home-hero__message-wrapper.text-center
    .container
      .home-hero__message-title
        h1.home-hero__message-title-head.mb-0
          ' &lt; code_your_future /&gt;
          .font-semibold
            ' learn to build tech-products, the startup way
        p.home-hero__message-title-subhead
          '  with premium job guarantee
          / span.font-semibold Job Guarantee
          br
          / | or
          / span.font-semibold &nbsp;100% money back!
        .pt-3
          - if current_founder.present?
            = link_to 'Go to Dashboard', dashboard_founder_path, class: 'btn btn-primary btn-lg home-apply__button'
          - else
            = link_to 'Join Now', join_path, class: 'btn btn-primary btn-lg home-apply__button', id: 'home-index__hero-join-link'

  - unless Rails.env.test?
    = video_tag 'https://public-assets.sv.co/videos/header_background_clip.mp4', preload: 'none', autoplay: true, loop: true, class: 'd-none d-md-block home-hero__video'

section.home-partners__container.py-3.d-none.d-md-block
  .container.home-partners__box
    .row.align-items-center.text-center
      .col-md-3
      .col-md-2
        = image_tag 'home/index/sv-partner-facebook.svg', class: 'img-fluid mx-auto home-partners__logo home-partners__logo--facebook', alt: 'Facebook Logo'

      /.col-md-2
