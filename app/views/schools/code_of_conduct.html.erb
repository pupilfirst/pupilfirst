<% content_for(:head) do %>
  <title><%= current_school.name %> | <%= t(".page_title") %> </title>
<% end %>
<div id="schoolrouter-innerpage-data">
  <section class="bg-gray-50">
    <div class="max-w-6xl mx-auto p-4 md:p-10 ">
      <%= link_to standing_school_path, class: "bg-gray-200 px-3 py-1 text-gray-600 rounded-xl text-sm hover:text-primary-500 hover:bg-primary-50 focus:outline-none focus:text-primary-500 focus:bg-primary-50 focus:ring-1 focus:ring-focusColor-500" do %>
        <i class="if i-arrow-left-regular"></i>
        <span><%= t('shared.back_link') %></span>
      <% end %>
      <h1 class="font-bold text-lg pt-5">Code of Conduct</h1>
      <p class="text-sm text-gray-600">Update your school's code of conduct</p>
    </div>
  </section>
  <section class="max-w-6xl mx-auto p-4 md:pb-10 md:pl-10 md:pr-10">
    <div class="mt-1" data-re-component="SimpleMarkdownEditor" data-re-json="<%= { value: "CoC" || "", textAreaName: "code_of_conduct_editor", profile: "TextArea", dynamicHeight: true}.to_json %>"></div>
    <%= button_to "Save code of conduct", "#", method: :get, class: "btn btn-primary btn-large w-full mt-5 max-w-6xl" %>
  </section>
</div>
