  <div class="<%= "bg-#{event.color}-50 " + "overflow-hidden rounded-lg"%>">
    <a
      href=<%=school_course_calendar_event_path(@course,event)%>
      class="<%= "block p-4 transition-all focus:outline-none " + "hover:bg-#{event.color}-100 focus:bg-#{event.color}-100"%>"
      ariaLabel="eventName on eventDate at eventTime">
      <div class="flex justify-between">
        <div class="flex gap-3 items-center">
          <div class=<%="w-3 h-3 rounded-full " + "bg-#{event.color}-500"%>></div>
          <div>
            <p class="font-semibold text-base"><%= event.title %></p>
            <p class="font-medium text-sm">
              <%= event.display_time %>
            </p>
          </div>
        </div>
        <p class="text-black/50 text-xs"> <%= event.calendar.name %> </p>
      </div>
    </a>
    <% if event.link_url.present? %>
      <a
        href=<%= event.link_url %>
        ariaLabel="Link to event"
        target="_blank"
        rel="noopener noreferrer"
        class="<%="p-4 block text-primary-500 font-medium text-sm transition-all border-t border-black/5 hover:underline focus:underline focus:outline-none " + "hover:bg-#{event.color}-100 focus:bg-#{event.color}-100"%>">
        <div class="flex gap-2 items-center">
          <i class="if i-external-link-regular if-fw"></i>
          <p>
          <%= event.link_title %>
          </p>
        </div>
      </a>
    <% end %>
  </div>
