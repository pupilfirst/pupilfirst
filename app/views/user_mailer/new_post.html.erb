<%
  topic = @post.topic
  addressee_name = @addressee.name
  author_name = @post.creator&.name || "A user"
  community_name = @post.topic.community.name
%>

<% content_for :salutation do %>
  <%= t("shared.salutation_name", name: addressee_name) %>
<% end %>

<% content_for :body do %>
  <%= t("mailers.user.new_post.body.main_html", author_name: author_name, community_name: community_name, link_to: link_to(t("mailers.user.new_post.body.link_to", community_name: community_name), topic_url(topic))) %>

  <%= render 'mailers/link_fallback', url: topic_url(topic) %>
<% end %>
