<div class="mx-auto mt-6 max-w-6xl px-5">
  <div class="rounded-xl border border-gray-200 bg-gray-50">
    <div class="sticky flex flex-wrap items-center justify-between gap-5 border-b border-gray-200 p-4">
      <h2 class="text-lg font-semibold">Review changes</h2>
      <div class="flex gap-4">
        <%= link_to "Cancel Sync", discord_server_roles_school_path, class: "rounded-lg border border-gray-200 bg-gray-100 px-5 py-3 text-sm font-medium text-gray-500 transition hover:bg-white" %>
        <%= button_to "Confirm Sync", discord_sync_roles_school_path(confirmed_sync: true), method: :post, class: "border-primary-200 bg-primary-100 text-primary-500 hover:bg-primary-200 rounded-lg border px-5 py-3 text-sm font-medium transition" %>
      </div>
    </div>
    <div class="grid grid-cols-2">
      <div class="border-e border-gray-200 p-4">
        <h3 class="text-sm font-semibold">Cached roles on LMS</h3>
        <div class="mt-3 flex flex-col gap-2">
          <% locals[:sync_service].cached_roles.each do |role| %>
            <div class="flex items-center gap-1.5 rounded-lg border border-gray-100 bg-white p-3">
              <div style="background-color: <%= role.color_hex %>;" class="h-3 w-3 rounded-full" aria-hidden="true"></div>
              <p class="text-sm font-medium"><%= role.name %></p>
            </div>
          <% end %>
        </div>
      </div>
      <div>
        <div class="p-4">
          <div class="flex items-center gap-2">
            <p class="rounded-full border border-green-200 bg-green-100 p-3 text-sm text-red-600"><i class="if i-plus-regular if-fw"></i></p>
            <h3 class="text-sm font-semibold">New roles which will be added to LMS</h3>
          </div>
          <div class="mt-3 flex flex-col gap-2">
            <% locals[:sync_service].fetched_roles.each do |role| %>
              <div class="flex items-center gap-1.5 rounded-lg border border-green-100 bg-green-50 p-3">
                <div style="background-color: <%= role.color_hex %>;" class="h-3 w-3 rounded-full" aria-hidden="true"></div>
                <p class="text-sm font-medium"><%= role.name %></p>
              </div>
            <% end %>
          </div>
        </div>
        <div class="border-t border-gray-200 p-4">
          <div class="flex items-center gap-2">
            <p class="rounded-full border border-red-200 bg-red-100 p-3 text-sm text-red-600"><i class="if i-plus-regular if-fw"></i></p>
            <h3 class="text-sm font-semibold">Roles which will be removed from LMS</h3>
          </div>
          <div class="mt-3 flex flex-col gap-2">
            <% locals[:sync_service].deleted_roles.each do |role| %>
              <div class="flex items-center gap-1.5 rounded-lg border border-green-100 bg-green-50 p-3">
                <div style="background-color: <%= role.color_hex %>;" class="h-3 w-3 rounded-full" aria-hidden="true"></div>
                <p class="text-sm font-medium"><%= role.name %></p>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
