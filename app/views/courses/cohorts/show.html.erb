<div>
  <section class="bg-gray-50">
    <div class="max-w-5xl mx-auto p-6 pb-0">
      <h1 class="text-xl md:text-3xl font-bold mt-4">
        <%= @cohort.name %>
      </h1>
      <p class="text-sm font-medium"><%= @course.name %></p>
      <div class="mt-6 flex gap-4 items-center border-b border-gray-300 text-sm">
        <p class="p-2 border-b-2 border-primary-500 text-primary-500 font-semibold"><%= 'Overview' %></p>
        <%= link_to 'Students', students_course_cohort_path(@course, @cohort), class: "p-2 hover:text-primary-500 hover:bg-primary-100" %>
      </div>
    </div>
  </section>
  <section class="bg-white">
    <div class="max-w-5xl mx-auto p-6">
      <div class="p-4 bg-gray-100 rounded-lg mt-8">
        <h3 class="text-xs font-semibold"><%= 'Student Distribution by Milestone Completion' %></h3>
        <div class="p-8 mx-auto max-w-3xl">
          <div class="space-y-4">
            <% @presenter.milestone_completion_status.each do |target, percentage| %>
              <div class="flex items-center space-x-2">
                <p class="flex-shrink-0"><%= "Milestone #{target.milestone_number}"%></p>
                <div class="bg-gray-200 rounded-md w-full overflow-hidden">
                  <div class="<%= "w-#{percentage} text-xs text-center p-0.5 bg-green-500" %>"><%= "#{percentage}%"%></div>
                </div>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </section>
</div>
