<div class="pb-5 pt-18 bg-gray-50 md:h-screen overflow-y-auto">
  <section class="bg-gray-50">
    <div class="max-w-5xl mx-auto p-6 pb-0">
      <div class="mt-4 overflow-x-auto">
        <%= render 'shared/breadcrumbs', crumbs: [["My Org", "/organisations"], [@organisation.name, organisation_path(@organisation)], [@cohort.course.name, active_cohorts_organisation_course_path(@organisation, @cohort.course)], [@cohort.name]] %>
      </div>
      <h1 class="text-xl md:text-3xl font-bold mt-4">
        <%= @cohort.name %>
      </h1>
      <p class="text-sm font-medium"><%= @cohort.course.name %></p>
      <div class="mt-6 flex gap-4 items-center border-b border-gray-300 text-sm">
        <p class="p-2 border-b-2 border-primary-500 text-primary-500 font-semibold"><%= t('cohorts.shared.overview_link') %></p>
        <%= link_to t('cohorts.shared.students_link'), students_organisation_cohort_path(@organisation, @cohort), class: "p-2 hover:text-primary-500 hover:bg-primary-100" %>
      </div>
    </div>
  </section>
  <section class="bg-white">
    <div class="max-w-5xl mx-auto p-6">
      <div class="mt-4 grid grid-cols-1 md:grid-cols-3 gap-5">
        <div class="p-5 bg-white flex flex-col gap-2 border border-gray-300 rounded-lg">
          <p class="text-sm text-gray-600"><%= t('.total_students') %></p>
          <p class="text-3xl font-bold"><%= @presenter.counts[:total] %></p>
          <%= link_to students_organisation_cohort_path(@organisation, @cohort), class: "text-sm font-medium text-primary-500 hover:text-primary-800 hover:underline" do %>
            <span><%= t('.view_all')%></span><i class="if i-arrow-right-regular rtl:rotate-180 inline-block text-primary-500 ms-2" aria-hidden="true"></i>
          <% end %>
        </div>
        <div class="p-5 bg-white flex flex-col gap-2 border border-gray-300 rounded-lg">
          <p class="text-sm text-gray-600"><%= t('.students_completed') %></p>
          <p class="text-3xl font-bold"><%= @presenter.counts[:completed] %></p>
          <%= link_to students_organisation_cohort_path(@organisation, @cohort), class: "text-sm font-medium text-primary-500 hover:text-primary-800 hover:underline" do %>
            <span><%= t('.view_all')%></span><i class="if i-arrow-right-regular rtl:rotate-180 inline-block text-primary-500 ms-2" aria-hidden="true"></i>
          <% end %>
        </div>
      </div>
      <div class="p-4 bg-gray-100 rounded-lg mt-8">
        <h3 class="text-xs font-semibold"><%= t('.distribution_heading') %></h3>
        <div class="max-w-5xl mx-auto p-6">
          <div class="p-4 bg-gray-100 rounded-lg mt-8">
            <h3 class="text-xs font-semibold"><%= 'Student Distribution by Milestone Completion' %></h3>
            <div class="p-8 mx-auto max-w-3xl">
              <div class="space-y-4">
                <% @presenter.milestone_completion_status.each do |target, percentage| %>
                  <div class="flex items-center space-x-2">
                    <p class="flex-shrink-0"><%= "Milestone #{target.milestone_number}"%></p>
                    <div class="bg-gray-200 rounded-md w-full overflow-hidden">
                      <div class="<%= "w-#{percentage} text-xs text-center p-0.5 bg-green-500" %>"><%= "#{percentage}%"%></div>
                    </div>
                  </div>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
</div>
